<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/public_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center">

        <fj.dropdownmenu.lib.view.DropdownButton
            android:id="@+id/btnType"
            app:isLine="true"
            app:selectedTextColor="@color/colorAccent"
            app:selectedIcon="@mipmap/ic_up2"
            app:lineColor="@color/colorAccent"
            app:notSelectedIcon="@mipmap/ic_dn2"
            app:notSelectedTextColor="@color/font_black_content"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/font_black_6" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="我是内容！！"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <fj.dropdownmenu.lib.view.DropdownColumnView
            android:id="@+id/lvType"
            app:columnSelectedIcon="@mipmap/ic_check2"
            app:columnType="singleRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </FrameLayout>

</LinearLayout>
